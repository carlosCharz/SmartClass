<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_detail"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese la informacion correspondiente al depósito"/>

            <TextView
                android:id="@+id/tv_amount_to_pay"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monto total a pagar: S/. 10"/>

            <TextView
                android:background="@drawable/custom_combo_background"
                android:textSize="18sp"
                android:hint="Banco"
                android:layout_marginTop="40dp"
                android:id="@+id/tv_pick_bank"
                android:layout_weight="0.25"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:lines="1"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black"
                android:drawableEnd="@drawable/ic_keyboard_arrow_down_black"/>

            <LinearLayout
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">
                    <EditText
                        android:id="@+id/et_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Monto"
                        android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>

                <ToggleButton
                    android:id="@+id/tb_currency"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textOn="$"
                    android:textOff="S/."/>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_transaction_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Numero de Transacción"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/b_confirm"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Confirmar"
                android:background="@drawable/custom_button_background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="* El sistemas se demora 24 horas en confirmar el depósito luego de registrado en la aplicacion"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>