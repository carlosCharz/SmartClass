<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wedevol.smartclass.ConfirmActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="44dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese el lugar donde se acordó dictar la asesoría."
        android:textSize="16dip"
        android:layout_marginBottom="20dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casa del alumno"
            android:id="@+id/radioButton"
            android:layout_gravity="left"
            android:textSize="16dip"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casa del asesor"
            android:id="@+id/radioButton2"
            android:layout_gravity="left"
            android:enabled="false"
            android:textSize="16dip"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Universidad"
            android:id="@+id/radioButton3"
            android:layout_gravity="left"
            android:checked="true"
            android:textSize="16dip"/>

            <EditText android:id="@+id/input_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Ingresa el lugar aquí"
                android:textSize="16dip"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_confirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:text="Confirmar"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/green_soft">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="* Al confirmar, aceptas que darás asesoría en el horario y lugar acordado."
            android:textSize="16dip"
            android:padding="8dp" />
    </LinearLayout>
</RelativeLayout>
