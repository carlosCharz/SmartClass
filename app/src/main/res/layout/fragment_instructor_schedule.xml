<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_schedule_holder"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa tu disponibilidad horaria"/>

        <ProgressBar
            android:layout_below="@+id/tv_announcement"
            android:id="@+id/pb_charging"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_no_schedules"
            android:drawableTop="@drawable/ic_schedule_black"
            android:gravity="center"
            android:layout_margin="50dp"
            android:textSize="22sp"
            android:text="No has registrado horarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_monday_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchMode="columnWidth"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideInset" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_tuesday_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchMode="columnWidth"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideInset" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_wednesday_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchMode="columnWidth"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideInset" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_thursday_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchMode="columnWidth"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideInset" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_friday_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchMode="columnWidth"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideInset" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_saturday_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchMode="columnWidth"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideInset" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sunday_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchMode="columnWidth"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideInset" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_edit_schedule"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_add_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>