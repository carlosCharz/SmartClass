<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="44dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Ingresa tu disponibilidad horaria"
            android:gravity="left"
            android:textSize="16dip"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_lun"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Lun"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_mar"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Mar"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_wed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Mie"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_jue"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Jue"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_vie"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Vie"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_sab"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Sab"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_dom"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Dom"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- From Label -->
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Desde"
            android:textSize="16dip"/>
        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/from1Text"
            android:layout_alignParentTop="true"
            android:hint="inicio"
            android:focusable="false"/>

        <!-- To Label -->
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Hasta"
            android:textSize="16dip"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/code2Text"
            android:layout_alignParentTop="true"
            android:hint="fin"
            android:focusable="false"/>

        <ImageView android:src="@drawable/equis"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_marginTop="20dp"/>

        <TextView android:id="@+id/add_schedule_line_link"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/add_schedule_line_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="left"
            android:textSize="16dip"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_save_schedule"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Guardar"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_complete_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Vista Completa"/>

    </LinearLayout>
</ScrollView>