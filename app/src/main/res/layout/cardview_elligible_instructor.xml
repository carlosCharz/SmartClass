<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cd_counsellor_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    android:layout_marginBottom="6dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="15dp">

        <TextView
            android:gravity="center"
            android:layout_weight="0.25"
            android:id="@+id/tv_counsellor_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/oil"
            android:textSize="18sp"
            tools:text="Luis"/>


        <TextView
            android:gravity="center"
            android:drawableStart="@drawable/ic_star_black"
            android:drawableLeft="@drawable/ic_star_black"
            android:layout_weight="0.25"
            android:id="@+id/tv_counsellor_rating"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/oil"
            android:textSize="16sp"
            tools:text="4.7"/>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="0.20"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/custom_level_background"
                android:gravity="center"
                android:id="@+id/tv_counsellor_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/oil"
                android:textSize="16sp"
                tools:text="3"/>
        </LinearLayout>

        <TextView
            android:gravity="center"
            android:layout_weight="0.30"
            android:id="@+id/tv_counsellor_hourly_rate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/oil"
            android:textSize="16sp"
            tools:text="S/. 20 / h"/>
    </LinearLayout>
</android.support.v7.widget.CardView>