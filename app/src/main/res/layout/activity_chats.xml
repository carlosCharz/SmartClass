<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wedevol.smartclass.ChatsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/iron">

            <ImageView android:id="@+id/chat1_link"
                android:src="@drawable/chat2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"/>

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Alex Jara - Cálculo 1 el jueves 16/08 de 2:00 a 4:00 PM."
                android:textSize="16dip"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:src="@drawable/home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:clickable="true" />

            <ImageView
                android:src="@drawable/uni"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/iron"
            android:layout_marginTop="16dp">

            <ImageView
                android:src="@drawable/chat2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Mario Casas - Física 1 el viernes 17/08 de 6:30 a 9:30 PM."
                android:textSize="16dip"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:src="@drawable/uni"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
