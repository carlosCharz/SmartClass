<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sugerir Curso"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:background="@color/primary_dark"
        android:padding="10dp"/>

    <TextView
        android:layout_margin="10dp"
        android:text="Escribe el nombre del curso que deseas que incluyamos entre las opciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_margin="10dp"
        android:id="@+id/tv_dialog_course_name"
        android:hint="Curso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@drawable/custom_combo_background"
        android:layout_margin="10dp"
        android:id="@+id/tv_dialog_university"
        android:hint="Universidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@drawable/custom_combo_background"
        android:layout_margin="10dp"
        android:id="@+id/tv_dialog_faculty"
        android:hint="Facultad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>